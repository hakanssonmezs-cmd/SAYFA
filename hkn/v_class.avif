  <script>
    // Tabs behaviour
    document.querySelectorAll('.tab-btn').forEach(btn=>{
      btn.addEventListener('click',()=>{
        document.querySelectorAll('.tab-btn').forEach(b=>b.classList.remove('active'));
        btn.classList.add('active');
        const tab = btn.getAttribute('data-tab');
        document.querySelectorAll('.tab-content').forEach(c=>c.style.display='none');
        const el = document.getElementById(tab);
        if(el) el.style.display = 'block';
        window.scrollTo({top:0,behavior:'smooth'});
      })
    });

    // Set footer year
    document.getElementById('year').textContent = new Date().getFullYear();

    // WhatsApp behavior: top and inside buttons
    const BUSINESS_NUMBER = '90533855500'; // no plus
    function buildMessage(){
      const name = document.getElementById('name')?.value.trim() || '';
      const phone = document.getElementById('phone')?.value.trim() || '';
      const email = document.getElementById('email')?.value.trim() || '';
      const ticketDate = document.getElementById('ticketDate')?.value || '';
      const ticketTime = document.getElementById('ticketTime')?.value || '';
      const flight = document.getElementById('flight')?.value.trim() || '';
      const guests = document.getElementById('guests')?.value || '';
      const destination = document.getElementById('destination')?.value.trim() || '';
      const note = document.getElementById('note')?.value.trim() || '';

      let msg = 'Merhaba, rezervasyon yapmak istiyorum.%0A';
      msg += 'Ad Soyad: ' + encodeURIComponent(name) + '%0A';
      msg += 'Telefon: ' + encodeURIComponent(phone) + '%0A';
      msg += 'E-posta: ' + encodeURIComponent(email) + '%0A';
      msg += 'Uçuş Tarihi: ' + encodeURIComponent(ticketDate) + '%0A';
      msg += 'Uçuş Saati: ' + encodeURIComponent(ticketTime) + '%0A';
      msg += 'Uçuş Numarası: ' + encodeURIComponent(flight) + '%0A';
      msg += 'Kişi Sayısı: ' + encodeURIComponent(guests) + '%0A';
      msg += 'Varış Noktası: ' + encodeURIComponent(destination) + '%0A';
      msg += 'Not: ' + encodeURIComponent(note);
      return msg;
    }

    document.getElementById('waButton').addEventListener('click',()=>{
      const url = 'https://wa.me/' + BUSINESS_NUMBER + '?text=' + buildMessage();
      window.open(url,'_blank');
    });

    document.getElementById('waTop').addEventListener('click',()=>{
      // open same message but keep page at top
      const url = 'https://wa.me/' + BUSINESS_NUMBER + '?text=' + buildMessage();
      window.open(url,'_blank');
    });
